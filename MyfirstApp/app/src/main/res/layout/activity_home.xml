<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient"
    tools:context="app.iastateeduhazemahmed.cointransfer.myfirstapp.MainActivity">

    <Button
        android:id="@+id/friendsBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="39dp"
        android:layout_marginStart="39dp"
        android:layout_marginTop="46dp"
        android:text="Find Friends." />

    <Button
        android:id="@+id/checkpromisesBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/friendsBtn"
        android:layout_alignBottom="@+id/friendsBtn"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="44dp"
        android:layout_marginRight="44dp"
        android:text="Check Promises." />

    <Button
        android:id="@+id/deletefrndBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/checkpromisesBtn"
        android:layout_alignRight="@+id/checkpromisesBtn"
        android:layout_below="@+id/checkpromisesBtn"
        android:layout_marginTop="66dp"
        android:text="Delete a friend" />

    <Button
        android:id="@+id/button3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/deletefrndBtn"
        android:layout_alignBottom="@+id/deletefrndBtn"
        android:layout_alignEnd="@+id/friendsBtn"
        android:layout_alignRight="@+id/friendsBtn"
        android:text="ADD a friend" />
</RelativeLayout>
